
<div class="top-wrapper">
  <div class="top-inner-text">
    <h1>Cold Brew/Crew</h1>
    <br>
    <h3>店名から探す</h3>
    <%= search_form_for @search_store, url: stores_path do |f| %></h3>
      <h3><%= f.text_field :name_cont ,placeholder: '店名を入力してください' %></h3>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    <br>
    <h3>味の評価から探す</h3>
    <%= search_form_for @search_article, url: search_store_articles_path(store_id: @search_articles) do |f| %>
      <%= f.label :rate_eq, '評価' %>
      <%= f.radio_button :rate_eq, '' %>指定しない
      <%= f.radio_button :rate_eq, '1.0' %>1.0
      <%= f.radio_button :rate_eq, '2.0' %>2.0
      <%= f.radio_button :rate_eq, '3.0' %>3.0
      <%= f.radio_button :rate_eq, '4.0' %>4.0
      <%= f.radio_button :rate_eq, '5.0' %>5.0
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  
    <div class="row">
      <div class="col-md-4">
        <h3>エリアから探す</h3>
          <h3><%= link_to '渋谷', '/areas/1' %></h3>
          <h3><%= link_to '新宿', '/areas/2' %></h3>
          <h3><%= link_to '池袋', '/areas/3' %></h3>
          <h3><%= link_to '表参道', '/areas/4' %></h3>
          <h3><%= link_to '代官山', '/areas/5' %></h3>
          <h4>随時追加します！<h4>
        </h3>
      </div>
      <div class="col-md-4">
        <h3>特徴から探す</h3>
          <h3><%= link_to 'コーヒースタンド', '/features/1' %></h3>
          <h3><%= link_to 'テラス席あり', '/features/2' %></h3>
          <h3><%= link_to '喫煙可', 'features/3' %></h3>
          <h4>随時追加します！<h4>
        </h3>
      </div>
    </div>
  </div>
</div>

    
    