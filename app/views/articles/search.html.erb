<% breadcrumb :article_search, @search_articles %>
<div class="container pt-5">
  <div class="row">
    <div class="col-12">
    <%= @search_articles_count %>    件見つかりました
      <div class="row">
        <% @results.each do |article| %>
          <div class="col-sm-12 col-lg-4 mb-3">
            <div id="article-id-<%= article.id %>">
              <div class="card">
                <%= image_tag article.article_image_url, class: 'card-img-top', size: '300x200' %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to article.title, store_article_path(id: article, store_id: article.store_id) %>
                  </h4>
                  <% if logged_in? %>
                    <%= render 'search_crud_menus', article: article if current_user.own?(article) %>
                    <%= render 'like_button',  article: article  %>
                  <% end %>
                  <ul class="list-inline">
                    <li class="list-inline-item">
                      <%= icon 'far', 'user' %>
                      <%= article.user.name %>
                      <%= icon 'far', 'calendar' %>
                      <%= l article.created_at, format: :long %>
                      <i class="fa fa-coffee" aria-hidden="true"></i>
                      <%= article.store.name %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @results %>
      </div>
    </div>
  </div>
</div>