<%= form_with model: [@store, @article], local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= @store.name %>
  </div>
  <%= f.label :rate %>
  <div class="frame">
    <h6 class="left">„Åæ„Çç„ÇÑ„Åã‚òïÔ∏è</h6>
    <div class="rate">
      <%= f.radio_button :rate, "1" %>
      <%= f.label :rate , value: 1 %>
      <%= f.radio_button :rate, "2" %>
      <%= f.label :rate , value: 2 %>
      <%= f.radio_button :rate, "3", checked: true %>
      <%= f.label :rate , value: 3 %>
      <%= f.radio_button :rate, "4" %>
      <%= f.label :rate , value: 4 %>
      <%= f.radio_button :rate, "5" %>
      <%= f.label :rate , value: 5 %>
    </div>
    <h6 class="right">„Éï„É´„Éº„ÉÜ„Ç£üçí</h6>
  </div>
  <div class='form-group'>
    <%= f.label :producing_area, Coffee.human_attribute_name(:producing_area) %>
    <%= f.collection_check_boxes(:coffee_ids, Coffee.all, :id, :producing_area, prompt: "ÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì") do |tag| %>
      <div class='form-check'>
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 5 %>
  </div>
  
  <div class="form-group">
    <%= f.label :article_image %>
    <%= f.file_field :article_image, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :article_image_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag article.article_image.url, id: 'preview', size: '300x200' %>
  </div>


  

  <%= f.submit class: 'btn btn-primary' %>
<% end %>