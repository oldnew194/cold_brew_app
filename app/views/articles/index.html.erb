<% breadcrumb :article_index, @store %>

<h3><%= @store.name %> の投稿記事</h3>
<%= @articles_count %>件見つかりました

<% content_for(:title, t('.title')) %>
<div class="container pt-3">
   <!-- 掲示板一覧 -->
   <div class="row">
     <div class="col-12">
       <div class="row">
         <% if @articles.present? %>
          <%= render @articles %> 
         <% else %>
          <p><%= t('.no_result') %></p>
         <% end %>
         <%= paginate @articles %>
       </div>
     </div>
   </div>
 </div>