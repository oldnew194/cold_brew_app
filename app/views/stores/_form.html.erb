<%= form_with model: @store, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tel %>
    <%= f.text_field :tel, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :closing_day %>
    <%= f.text_field :closing_day, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :opening_hours %>
    <%= f.text_field :opening_hours, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :closing_hours %>
    <%= f.text_field :closing_hours, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :latitude %>
    <%= f.text_field :latitude, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :longitude %>
    <%= f.text_field :longitude, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :opening_hours2 %>
    <%= f.text_field :opening_hours2, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :store_image %>
    <%= f.file_field :store_image, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :store_image_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag store.store_image.url, id: 'preview', size: '300x200' %>
  </div>
  <div class="form-group">
    <%= f.label :area_id %>
    <%= f.collection_select :area_id, Area.all, :id, :name %>
  </div>
  <div class='form-group'>
    <%= f.collection_check_boxes(:feature_ids, Feature.all, :id, :feature_type) do |tag| %>
      <div class='form-check'>
          <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
          <% end %>
        </div>
    <% end %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>