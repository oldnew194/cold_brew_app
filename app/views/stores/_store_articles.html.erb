<div class="row">
  <div class="col-12 offset-lg-2">
    <div class="row">
      <% @store_articles.each do |store_article| %>
        <div class="col-sm-12 col-lg-3 mb-3">
          <div id="store_article-id-<%= store_article.id %>">
            <div class="card">
              <%= image_tag @store.store_image_url, class: 'card-img-top', size: '250x150' %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to store_article.title, store_article_path(@store) %>
                </h4>
                <ul class="list-inline">
                  <li class="list-inline-item">
                    <%= store_article.user.name %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


