<%= @features_count %>件見つかりました

<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <%= render 'feature' , { features: @feature, stores: @stores } %>
      </div>
      <%= paginate @stores %>
    </div>
  </div>
</div>