<%= form_with model: [@store, @feature], local: true do |f| %>
  <div class="form-group">
    <%= t('feature.feature_type') %>
    <%= @feature.feature_type %>
  </div>
  <div class="form-group">
    <%= f.label :feature_type %>
    <%= f.text_field :feature_type, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>