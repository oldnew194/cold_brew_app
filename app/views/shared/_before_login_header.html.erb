<header>
  <nav class="navbar navbar-expand-lg navigation navbar-light bg-light">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'logo.png' %>
    <% end %>
    <button class='navbar-toggler' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class="navbar-toggler-icon"></span>
    </button>
    店名から探す
    <%= search_form_for @search_store, url: stores_path do |f| %>
      <%= f.text_field :name_cont ,placeholder: '店名' %>
      <%= f.submit ("検索") , class: 'search-btn'%>
    <% end %>
    <%= search_form_for @search_article, url: search_store_articles_path(store_id: @search_articles) do |f| %>
      <%= f.label :rate_eq, '味の評価から探す' %>
      <%= f.radio_button :rate_eq, '1.0' %>1
      <%= f.radio_button :rate_eq, '2.0' %>2
      <%= f.radio_button :rate_eq, '3.0', checked: true %>3
      <%= f.radio_button :rate_eq, '4.0' %>4
      <%= f.radio_button :rate_eq, '5.0' %>5
      <%= f.submit ("検索") , class: 'search-btn'%>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto main-nav align-items-center">
        <li class="nav-item">
          <%= link_to (t 'defaults.login'), login_path ,class: 'nav-link' %>
          <%= link_to 'ゲストログイン', '/guest_login', method: :post ,class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </nav>
</header>