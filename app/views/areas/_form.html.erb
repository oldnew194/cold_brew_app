<%= form_with model: @area, local: true do |f| %>
  <div class="form-group">
    <%= t('area.name') %>
    <%= @area.name %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>